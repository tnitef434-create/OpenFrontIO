{
  "manifest_version": 3,
  "name": "OpenFrontIO Gold Menu - Multiplayer Hack",
  "version": "1.0.0",
  "description": "Gold manipulation menu for OpenFrontIO - Works in real multiplayer games",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://openfront.io/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://openfront.io/*"],
      "js": ["inject-loader.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["websocket-interceptor.js"],
      "matches": ["*://openfront.io/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "OpenFront Gold Hack"
  }
}
